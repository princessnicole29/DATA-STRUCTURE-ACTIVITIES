#include <iostream>
using namespace std;

int main()
{
    double sales[] = {12.25, 32.50, 16.90, 23.00, 45.68};
    int size = sizeof(sales) /sizeof(sales[0]);
    
    cout << "ORIGINAL SALES: "<< endl;
    cout << "ELEMENTS: ";
    for (int i = 0; i < size; i++) {
        cout << sales[i] << " ";
    }
    
    cout << endl;
    
    //Add code to calculate and display the average sales.
    double sum = 0.0;
    for (int i = 0; i < size; i++) {
        sum += sales[i];
    }
    
    double average = sum / size;
    
    cout << "AVERAGE SALES: "<< average << endl;
    
    //Modify the initialization to include only three values
    
    double salesmodify[5] = {12.25, 32.50, 16.90};
    cout<< " \n";
    cout << "MODIFY SALES: "<< endl;
    cout << "ELEMENTS: ";
    for (int i = 0; i < size; i++) {
        cout << salesmodify[i] << " ";
    }
    
    
    return 0;
}
